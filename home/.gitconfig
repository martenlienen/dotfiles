[init]
  defaultbranch = main
[core]
  excludesfile = ~/.gitignore
  editor = vim
  pager = "less -F -X"
[user]
  name = "Marten Lienen"
  email = "m@martenlienen.com"
[credential]
  helper = store
[push]
  default = simple
  autosetupremote = true
  followTags = true
[pull]
  rebase = true
[fetch]
  prune = true
  prunetags = true
  all = true
[rebase]
  autostash = true
  autosquash = true
  updaterefs = true
[commit]
  verbose = true
[format]
  pretty = format:%C(yellow)%ar%C(reset) by %an <%C(italic)%ae%Creset> - %C(cyan italic)%h%n  %C(bold)%s
[log]
  abbrevcommit = true
  follow = true
[diff]
  algorithm = histogram
  colormoved = plain
  mnemonicprefix = true
  renames = true
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[rerere]
  enabled = true
  autoupdate = true
